    var <%=group.title%>=new OrgNode();
    <%=group.title%>.Text="<%=group.title%>";
    <%=group.title%>.Link="";
  <%else%>
    var <%=group.title%>=new OrgNode();
    <%=group.title%>.Text="<%=group.title%>";
    <%=group.title%>.Link="<%=group.title%>";
    <%=group.manager.title%>.Nodes.Add(<%=group.title%>);
  <%end%>
  

<%end%>
</script>

