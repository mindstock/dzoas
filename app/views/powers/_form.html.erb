  <%= form_tag('/powers', :class => 'form-horizontal') do -%>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td width="90" height="24" class="td_form01">导航名称</td>
        <td class="td_form02">
          <%= text_field_tag 'name', "#{@power.name}", :class => "form-control"%>
          <%= hidden_field_tag 'id', "#{@power.id}"%>
        </td>
      </tr>
      <tr>
        <td width="90" height="24" class="td_form01">父导航</td>
        <td class="td_form02">
          <select name="parent_id" id="parent_id">
            <option value="0">----无----</option>
            <%@powers.each do|power|%>
              <option value="<%=power.id%>"><%=power.name%></option>
            <%end%>
          </select>
        </td>
      </tr>
      <tr>
        <td width="90" height="24" class="td_form01">url</td>
        <td class="td_form02">
          <%= text_field_tag 'url', "#{@power.url}", :class => "form-control"%>
        </td>
      </tr>
      <tr>
        <td height="24" class="td_form01">备注</td>
        <td class="td_form02">
          <%= text_area_tag 'remark', "#{@power.remark}", :class => "form-control"%>
        </td>
      </tr>
    </table>
    <br>
    <table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
      <tr>
        <td align="center">
          <%= submit_tag '提交', :class => 'btn btn-success'%>
         <%= submit_tag '返回', :class => 'btn btn-info'%>
      </tr>
    </table>
    <p>&nbsp;</p>
    <p><br>
    </p>
  <%end -%>