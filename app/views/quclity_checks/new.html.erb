<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta charset="utf-8">
  <!-- Title and other stuffs -->
  <title>开平组</title> 
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="author" content="">

  <!-- Stylesheets -->
  <%=stylesheet_link_tag "style/bootstrap"%>


  <%=stylesheet_link_tag "style/style"%>



</head>

  <!-- Widgets stylesheet -->
  
  <!-- HTML5 Support for IE -->
  <!--[if lt IE 9]>
  <script src="js/html5shim.js"></script>
  <![endif]-->

  <!-- Favicon -->
</head>

<body>

 <div class="content">

    



      <!-- Matter -->

      <div class="matter">
        <div class="container">

          <div class="row">

            <div class="col-md-12">


              <div class="widget wgreen">
                
                <div class="widget-head">
                  <div class="pull-left">质量检测</div>
                  
                  <div class="clearfix"></div>
                </div>

                <div class="widget-content">
                  <div class="padd">

                    <h6>检查结果确认</h6>
                    <hr />
                    <!-- Form starts.  -->
                    <%= form_tag('/quclity_checks', :class => 'form-horizontal') do -%>
                     <form class="form-horizontal" role="form">
                                <div class="form-group">
                                  <label class="col-lg-4 control-label">是否合格</label>
                                  <div class="col-lg-8">
                                    <div class="radio">
                                      <label>
                                        <%=radio_button_tag "is_standard", 1, true%>
                                        合格
                                      </label>
                                    </div>
                                    <div class="radio">
                                      <label>
                                        <%=radio_button_tag "is_standard", 0%>
                                        不合格
                                      </label>
                                    </div>
                                  </div>
                                </div>
                                <div class="form-group">
                                  <label class="col-lg-4 control-label">备注说明</label>
                                  <div class="col-lg-8">
                                    <%= text_area_tag 'remark', "", :class => "form-control"%>
                                    <%= hidden_field_tag 'plan_id', "#{@plan_id}"%>
                                  </div>
                                </div> 
                                <div class="form-group">
                                  <div class="col-lg-offset-1 col-lg-9">
                                     <%= submit_tag '提交', :class => 'btn btn-success'%>
                                     <a href="/plans/spread/1" class="btn btn-info">返回</a>
                                                       </div>
                                </div>  
                              <%end -%>
                  </div>
                </div>
                  <div class="widget-foot">
                    <h6>检查历史记录</h6>
                    <hr />
                    <div class="row">

                        <div class="col-md-12">
                          <div class="widget">
                        <div class="widget-content">

                          <table class="table table-striped table-bordered table-hover">
                            <thead>
                              <tr>
                                <th>ID</th>
                                <th>是否合格</th>
                                <th>备注</th>
                                <th>检查时间</th>
                              </tr>
                            </thead>
                            <tbody>
                              <%@quclity_checks.each do|quclity_check|%>
                              <tr>
                                <td><%=quclity_check.id%></td>
                                <td><%if quclity_check.is_standard ==1%>是<%else%>否<%end%></td>
                                <td><%=quclity_check.remark%></td>
                                <td><%=quclity_check.created_at%></td>
                              </tr>
                              <%end%>
                            </tbody>
                          </table>
                        </div>

                      </div>
                    </div>
                  </div>
              </div>  

            </div>

          </div>

        </div>


    <!-- Matter ends -->

    </div>

   <!-- Mainbar ends -->        
   <div class="clearfix"></div>

</div>
                      </div>    


<span class="totop"><a href="#"><i class="icon-chevron-up"></i></a></span> 

<!-- JS -->
<script src="js/jquery.js"></script> <!-- jQuery -->
<script src="js/bootstrap.js"></script> <!-- Bootstrap -->



</body>
</html>