<%= form_tag('/plans', :class => 'form-horizontal') do -%>
<!-- Main bar -->
    <div class="mainbar">
      <!-- Page heading -->
      <div class="page-head">
        <!-- Page heading -->
        <h2 class="pull-left">
          <span class="page-meta">开平组-新建计划</span>
        </h2>


        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="index.html"><i class="icon-home"></i> 首页</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="#" class="bread-current">开平组-新建计划</a>
        </div>

        <div class="clearfix"></div>

      </div>
      <!-- Page heading ends -->



      <!-- Matter -->

      <div class="matter">
        <div class="container">

          <div class="row">

            <div class="col-lg-12">


              <div class="widget wgreen">

                <div class="widget-content">
                  <div class="padd">
                    <div id="allplan">
                      <div id="yuancailiao">
                        <h6>原材料</h6>
                        <hr>
                        <div class="form-group">
                          <label class="col-lg-2 control-label">材质</label>
                          <div class="col-lg-2">
                           <input type="text" class="form-control" placeholder="Input Box">
                          </div>
                          <label class="col-lg-2 control-label">库位</label>
                          <div class="col-lg-2">
                            <input type="text" class="form-control" placeholder="Input Box">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-lg-2 control-label">钢卷规格(厚x宽x长)</label>
                          <div class="col-lg-5">
                           <input type="text" class="form-control" placeholder="Input Box">
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-lg-2 control-label">重要程度</label>
                            <div class="col-lg-2">
                              <%= select_tag "importance", "<option selected='selected' value='0'>一般</option><option value='1'>紧急</option>".html_safe, :class => "form-control"%>
                            </div>
                          <label class="col-lg-2 control-label">卷重</label>
                          <div class="col-lg-2">
                           <input type="text" class="form-control" placeholder="Input Box">
                          </div>
                        </div>
                    </div>
                      <span id="chengpinjia" class="label label-success">+</span>
                      <div id="chengpin">
                        <h6>成品</h6>
                        <hr>
                        <div class="form-group">
                          <label class="col-lg-2 control-label">加工规格(厚x宽x长)</label>
                          <div class="col-lg-5">
                           <input type="text" class="form-control" placeholder="Input Box">
                          </div>
                        </div>
                        
                        <div class="form-group">
                          <label class="col-lg-2 control-label">完工日期</label>
                          <div id="datetimepicker1" class="input-append col-lg-3">
                            <%= text_field_tag 'finish_at', "#{@plan.finish_at}", :class => "form-control dtpicker", "data-format" => "yyyy-MM-dd"%>
                            <span class="add-on">
                              <i data-time-icon="icon-time" data-date-icon="icon-calendar" class="btn btn-info btn-lg"></i>
                            </span>
                          </div>
                          <label class="col-lg-2 control-label">送往单位</label>
                          <div class="col-lg-2">
                           <%= text_field_tag 'to', "#{@plan.to}", :class => "form-control"%>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-lg-2 control-label">备注</label>
                          <div class="col-lg-6">
                           <textarea class="form-control" name="input"></textarea>
                          </div>
                        </div>
                    </div>
                  <div>
            
              
                    <div class="form-group">
                      <div class="col-lg-offset-1 col-lg-12">
                         <%= submit_tag '提交', :class => 'btn btn-success'%>
                         <%= submit_tag '返回', :class => 'btn btn-info'%>
                     </div>
                    </div>
                         
                  </div>
                </div>
              </div>  

            </div>

          </div>

        </div>
      </div>

    <!-- Matter ends -->

    </div>
<%end -%>

<%=javascript_include_tag "jquery"%>
<script type="text/javascript">
  var yuancailiao_div = $("#chengpin").html();
  $("#chengpinjia").click(function(){
    $("#chengpin").append(yuancailiao_div);
  });
</script>