<h1>Listing bags</h1>

<table>
  <thead>
    <tr>
      <th>Sheet</th>
      <th>Type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bags.each do |bag| %>
      <tr>
        <td><%= bag.sheet %></td>
        <td><%= bag.type %></td>
        <td><%= link_to 'Show', bag %></td>
        <td><%= link_to 'Edit', edit_bag_path(bag) %></td>
        <td><%= link_to 'Destroy', bag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

